@model IList<kdgparking.BL.Domain.InputHolder>

@{
    ViewBag.Title = "File Uploaden";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Basic File Upload</h2>
    @using (Html.BeginForm("Index",
                            "CSV",
                            FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
    {
        <label for="file">Upload File:</label>
        <input type="file" name="file" id="file" /><br><br>
        <input type="submit" value="Upload File" />
        <br><br>
        @ViewBag.Message
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().PNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Badge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().BeginDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ContractId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().VoertuigNaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().nummerplaat)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Badge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VoertuigNaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nummerplaat)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PNumber })
                @* TODO: checkbox voor commit *@
            </td>
        </tr>
        }
    </table>
</body>
</html>
