@model kdgparking.Models.ContractViewModel

@{
    ViewBag.Title = "Lijst Actieve Contracten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListActive</title>
</head>
<body>
    <h2>Actieve Contracten</h2>
    <form>
        <p>
            <select name="SearchString">
                <option value="">Alle companies</option>
                @foreach (var item in Model.Companies)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <select name="Status">
                <option value="">Badge status</option>
                @foreach (var item in Model.Status)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <input type="submit" value="Filter" />
        </p>
        
    </form>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.contractmodels[0].BadgeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contractmodels[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contractmodels[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contractmodels[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contractmodels[0].Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contractmodels[0].BadgeStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contractmodels[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contractmodels[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contractmodels[0].Company)
            </th>
        </tr>

        @foreach (var item in Model.contractmodels)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BadgeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BadgeStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.ActionLink("Activate", "Activate", "Contract", new { badgeId = item.BadgeId }, null) |
                @Html.ActionLink("Disable", "Disable", "Contract", new { badgeId = item.BadgeId }, null) |
                @Html.ActionLink("Lost", "Lost", "Contract", new { badgeId = item.BadgeId }, null) |
                @Html.ActionLink("Assign", "Assign", "Contract", new { holderId = item.HolderId, badgeId = item.BadgeId }, null)
            </td>
        </tr>
        }

    </table>
</body>
</html>
