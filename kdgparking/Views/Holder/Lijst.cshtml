@model IEnumerable<kdgparking.BL.Domain.InputHolder>

@{
    ViewBag.Title = "Lijst";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lijst</h2>

<form asp-controller="Holder" asp-action="Lijst" method="get">
    <p>
        Naam: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.HolderId }) |
            @Html.ActionLink("Details", "Details", new {  id=item.HolderId }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.HolderId })
        </td>
    </tr>
}

</table>
